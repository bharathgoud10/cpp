
string s="saibharath";
    int freq[26];
    memset(freq, 0, sizeof(freq));//for initializing the array elements with 0's
    for(int i=0;i<s.size();i++){
        freq[s[i]-'a']++;
    }
    
    for(int i=0;i<s.size();i++){
    if(freq[s[i]-'a']!=0){
        cout<<s[i]<<" "<<freq[s[i]-'a']<<endl;
        freq[s[i]-'a']=0;
        
    }
    }
